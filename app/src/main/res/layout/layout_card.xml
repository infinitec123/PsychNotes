<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    app:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8ECC2">

        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Title" />

        <ImageView
            android:id="@+id/id_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/id_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            tools:src="@drawable/psych_placeholder" />

        <TextView
            android:id="@+id/id_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="Brief" />

        <TextView
            android:id="@+id/id_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/id_brief"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:text="Description" />

    </RelativeLayout>
</android.support.v7.widget.CardView>